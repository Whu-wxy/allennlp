{
  "dataset_reader": {
    "type": "text_classification_txt",
    "chinese_space": true,
    "tokenizer": {
    	"word_splitter": {
    		"type": "jieba"
    	}
    	},
    "token_indexers": {
      "tokens": {
        "type": "single_id"
      }
    }
  },
  "vocabulary": {
    "only_include_pretrained_words": true
  },
  "train_data_path": "F:\\dl-data\\datasets\\cnews\\cnews.train.txt",
  "validation_data_path": "F:\\dl-data\\datasets\\cnews\\cnews.val.txt",
  "model": {
    "type": "basic_classifier",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "F:\\dl-data\\vector\\chinese\\sgns.wiki.bigram-char\\sgns.wiki.word2vec300.txt",
          "embedding_dim": 300,
          "trainable": false
        }
      }
    },
    "seq2seq_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 300,
      "hidden_size": 300,
      "num_layers": 1,
      "dropout": 0.2
    },
    "seq2vec_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 600,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2
    },
    "dropout": 0.2
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["text", "num_tokens"]],
    "batch_size": 40
  },

  "trainer": {
    "num_epochs": 20,
    "grad_norm": 5.0,
    "patience": 8,
    "validation_metric": "+accuracy",
    "cuda_device": 0,
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 2
    },
    "optimizer": {
      "type": "adam",
      "betas": [0.9, 0.9]
    }
  }
}
